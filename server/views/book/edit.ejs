<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Book Title</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Book Title:"
            name="name"
            value="<%= book.name %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Author</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter the Book's Author:"
            name="author"
            value="<%= book.author %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">Year</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter the Year of Publication:"
            name="published"
            value="<%= book.published %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="descTextField">Description</label>
          <textarea
            type="text"
            class="form-control"
            id="descTextField"
            placeholder="Enter the Description of Book:"
            name="description"
            required
          >
  <%=book.description%></textarea
          >
        </div>

        <div class="from-group">
          <label for="priceTextField">Price</label>
          <input
            type="number"
            class="form-control"
            id="pricecTextField"
            placeholder="Enter the Price of Book:"
            name="price"
            value="<%= book.price %>"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/book-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
