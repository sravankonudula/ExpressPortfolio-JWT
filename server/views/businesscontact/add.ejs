<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="contactNameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="contactNameTextField"
            placeholder="Enter the Contact Name:"
            name="contactName"
            required
          />
        </div>

        <div class="from-group">
          <label for="contactNumberTextField">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="contactNumberTextField"
            placeholder="Enter the Contact Number"
            name="contactNumber"
            required
          />
        </div>

        <div class="from-group">
          <label for="emailAddressTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="emailAddressTextField"
            placeholder="Enter the Email Address:"
            name="emailAddress"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/business-contacts-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
